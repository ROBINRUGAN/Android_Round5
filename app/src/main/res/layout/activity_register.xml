<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/register_background"
    android:clipToPadding="true"
    android:fitsSystemWindows="false"
    tools:context=".LoginActivity">


    <ImageView
        android:id="@+id/privacy"
        android:layout_width="326dp"
        android:layout_height="23dp"
        android:src="@mipmap/privacy_policy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.976"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.928">

    </ImageView>

    <EditText
        android:id="@+id/code"
        android:layout_width="356dp"
        android:layout_height="70dp"
        android:background="@mipmap/input"
        android:fontFamily="@font/mew_store"
        android:hint="请输入验证码"
        android:singleLine="true"
        android:maxLength="6"
        android:inputType="number"
        android:paddingStart="20dp"
        android:textColor="#222222"
        android:textColorHint="#92A0C0"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.74">

    </EditText>

    <EditText
        android:id="@+id/phone"
        android:layout_width="356dp"
        android:layout_height="70dp"
        android:background="@mipmap/input"
        android:fontFamily="@font/mew_store"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:singleLine="true"
        android:maxLength="11"
        android:paddingStart="20dp"
        android:textColor="#222222"
        android:textColorHint="#92A0C0"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.62">

    </EditText>

    <EditText
        android:id="@+id/rePassword"
        android:layout_width="356dp"
        android:layout_height="70dp"
        android:background="@mipmap/input"
        android:fontFamily="@font/mew_store"
        android:hint="请输入再次输入密码"
        android:singleLine="true"
        android:maxLength="28"
        android:inputType="textVisiblePassword"
        android:paddingStart="20dp"
        android:textColor="#222222"
        android:textColorHint="#92A0C0"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499">

    </EditText>

    <EditText
        android:id="@+id/username"
        android:layout_width="356dp"
        android:layout_height="70dp"
        android:background="@mipmap/input"
        android:fontFamily="@font/mew_store"
        android:hint="请输入用户名"
        android:singleLine="true"
        android:maxLength="28"
        android:paddingStart="20dp"
        android:textColor="#222222"
        android:textColorHint="#92A0C0"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.241"
        tools:ignore="RtlSymmetry">

    </EditText>

    <EditText
        android:id="@+id/password"
        android:layout_width="356dp"
        android:layout_height="70dp"
        android:background="@mipmap/input"
        android:fontFamily="@font/mew_store"
        android:hint="请输入密码"
        android:singleLine="true"
        android:maxLength="28"
        android:inputType="textVisiblePassword"
        android:paddingStart="20dp"
        android:textColor="#222222"
        android:textColorHint="#92A0C0"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.367">

    </EditText>

    <Button
        android:id="@+id/register"
        android:layout_width="356dp"
        android:layout_height="70dp"
        android:background="@drawable/login_btn_click"
        android:fontFamily="@font/mew_store"
        android:text="立即加入MewStore！"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/mew_store_words_color"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.854" />

    <Button
        android:id="@+id/getCode"
        android:layout_width="139dp"
        android:layout_height="48dp"
        android:background="#00FFFFFF"
        android:fontFamily="@font/mew_store"
        android:text="获取验证码"
        android:textColor="@color/mew_store_words_color"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.871"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.733" />

</androidx.constraintlayout.widget.ConstraintLayout>