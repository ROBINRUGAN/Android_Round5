<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/register_background"
    android:clipToPadding="true"
    android:fitsSystemWindows="false"
    tools:context=".LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.098" />

    <ImageView
        android:id="@+id/privacy"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:src="@mipmap/privacy_policy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.74">

    </ImageView>

    <EditText
        android:id="@+id/register_code"
        android:layout_width="316dp"
        android:layout_height="55dp"
        android:background="@mipmap/input"
        android:fontFamily="@font/mew_store"
        android:hint="请输入验证码"
        android:inputType="number"
        android:maxLength="6"
        android:paddingStart="20dp"
        android:singleLine="true"
        android:textColor="#222222"
        android:textColorHint="#92A0C0"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.593">

    </EditText>

    <EditText
        android:id="@+id/register_phone"
        android:layout_width="316dp"
        android:layout_height="55dp"
        android:background="@mipmap/input"
        android:fontFamily="@font/mew_store"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:maxLength="11"
        android:paddingStart="20dp"
        android:singleLine="true"
        android:textColor="#222222"
        android:textColorHint="#92A0C0"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </EditText>

    <EditText
        android:id="@+id/register_rePassword"
        android:layout_width="316dp"
        android:layout_height="55dp"
        android:background="@mipmap/input"
        android:fontFamily="@font/mew_store"
        android:hint="请输入再次输入密码"
        android:inputType="textPassword"
        android:maxLength="28"
        android:paddingStart="20dp"
        android:singleLine="true"
        android:textColor="#222222"
        android:textColorHint="#92A0C0"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.417">

    </EditText>

    <EditText
        android:id="@+id/register_username"
        android:layout_width="316dp"
        android:layout_height="55dp"
        android:background="@mipmap/input"
        android:fontFamily="@font/mew_store"
        android:hint="请输入用户名"
        android:singleLine="true"
        android:maxLength="28"
        android:paddingStart="20dp"
        android:textColor="#222222"
        android:textColorHint="#92A0C0"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.241"
        tools:ignore="RtlSymmetry">

    </EditText>

    <EditText
        android:id="@+id/register_password"
        android:layout_width="316dp"
        android:layout_height="55dp"
        android:background="@mipmap/input"
        android:fontFamily="@font/mew_store"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:maxLength="28"
        android:paddingStart="20dp"
        android:singleLine="true"
        android:textColor="#222222"
        android:textColorHint="#92A0C0"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.329">

    </EditText>

    <Button
        android:id="@+id/register"
        android:layout_width="316dp"
        android:layout_height="55dp"
        android:background="@drawable/login_btn_click"
        android:fontFamily="@font/mew_store"
        android:inputType="number"
        android:text="立即加入MewStore！"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/mew_store_words_color"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.686" />

    <Button
        android:id="@+id/register_getCode"
        android:layout_width="139dp"
        android:layout_height="48dp"
        android:background="#00FFFFFF"
        android:fontFamily="@font/mew_store"
        android:text="获取验证码"
        android:textColor="@color/mew_store_words_color"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.816"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.593" />

</androidx.constraintlayout.widget.ConstraintLayout>